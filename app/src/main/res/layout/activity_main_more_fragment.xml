<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    tools:context=".ui.fragment.main.more.MainMoreFragment">

    <ImageView
        android:id="@+id/more_imageView"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="50dp"
        android:src="@drawable/avatar_inside_a_circle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/more_nickname_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/goyang"
        android:textColor="@color/colorBlack"
        android:textSize="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/more_imageView"
        tools:text="관리자" />

    <ImageView
        android:id="@+id/more_edit_textView"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:src="@drawable/ic_mode_edit_gray_24dp"
        app:layout_constraintStart_toEndOf="@id/more_nickname_textView"
        app:layout_constraintTop_toTopOf="@id/more_nickname_textView"
        app:layout_constraintBottom_toBottomOf="@id/more_nickname_textView"/>

    <TextView
        android:id="@+id/more_connect_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/rectangle1_background"
        android:fontFamily="@font/goyang"
        android:padding="5dp"
        android:textSize="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/more_nickname_textView"
        tools:text="페이스북" />

    <View
        android:id="@+id/more_null"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="20dp"
        android:background="@color/colorLightLightGray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/more_connect_textView" />


    <TextView
        android:id="@+id/more_written_textView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/goyang"
        android:gravity="center"
        android:padding="15dp"
        android:text="내가 쓴 글"
        android:textColor="@color/colorBlack"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/more_message_textView"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/more_null"
        app:layout_constraintVertical_bias="0" />

    <TextView
        android:id="@+id/more_message_textView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/goyang"
        android:gravity="center"
        android:padding="15dp"
        android:text="쪽지함"
        android:textColor="@color/colorBlack"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@id/more_written_textView"
        app:layout_constraintEnd_toEndOf="@id/more_inquire_textView"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toEndOf="@id/more_written_textView"
        app:layout_constraintTop_toTopOf="@id/more_written_textView" />

    <TextView
        android:id="@+id/more_inquire_textView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/goyang"
        android:gravity="center"
        android:padding="15dp"
        android:text="1:1 문의하기"
        android:textColor="@color/colorBlack"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@id/more_message_textView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toEndOf="@id/more_message_textView"
        app:layout_constraintTop_toTopOf="@id/more_message_textView" />

    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/colorLightLightGray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/more_written_textView" />

</android.support.constraint.ConstraintLayout>