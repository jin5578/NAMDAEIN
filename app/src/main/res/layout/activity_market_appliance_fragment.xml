<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    tools:context=".ui.fragment.market.appliance.MarketApplianceFragment">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/market_appliance_recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"/>

    <TextView
        android:id="@+id/market_appliance_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:gravity="center"
        android:text="등록된 게시글이 없습니다."
        android:textColor="@color/colorBlack"
        android:textSize="20sp"
        android:fontFamily="@font/goyang"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        tools:visibility="visible"/>

    <ProgressBar
        android:id="@+id/market_appliance_progressBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_alignParentBottom="true"
        android:visibility="gone"
        tools:visibility="visible"
        style="?android:attr/progressBarStyleSmall"/>

</RelativeLayout>